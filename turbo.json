{
    "$schema": "https://turborepo.org/schema.json",
    "globalDependencies": [
        "**/.env"
    ],
    "pipeline": {
        "dev": {
            "cache": false
        },
        "test:unit": {
            "cache": false
        },
        "build": {
            "dependsOn": [
                "^build"
            ],
            "outputs": [
                "dist/**"
            ]
        }
    }
}